<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StationDetail"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/buy_head"
        >

        <TextView
            android:id="@+id/stname"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="张家屯补货站"
            android:layout_marginTop="30dp"
            android:textSize="28dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
        />

        <TextView
            android:id="@+id/staddr"
            android:layout_below="@+id/stname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="四川省成都市成华区3号"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/stphone_tx"
            android:layout_below="@+id/staddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="联系电话："
            android:textSize="15dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/staphone"
            android:layout_below="@id/staddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"

            android:textColor="@color/white"
            android:text="18066533078"
            android:layout_toRightOf="@id/stphone_tx"
            />

        <ImageView
            android:id="@+id/shopping_car_BT"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/shopping_car"
            />

        <TextView
            android:id="@+id/car_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物车"
            android:textColor="@color/white"
            android:layout_below="@id/shopping_car_BT"
            android:layout_alignParentRight="true"
            android:textSize="10dp"
            android:layout_marginRight="8dp"
            />

        <ImageView
            android:id="@+id/navigate_IV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/shopping_car_BT"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/goto_software"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导航"
            android:textColor="@color/white"
            android:layout_below="@id/shopping_car_BT"
            android:textSize="10dp"
            android:layout_toLeftOf="@id/car_text"
            android:layout_marginRight="10dp"
            android:id="@+id/navigate_text"
            />

        <ImageView
            android:id="@+id/message_IV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@id/navigate_IV"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/message"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/white"
            android:layout_below="@id/shopping_car_BT"
            android:textSize="10dp"
            android:layout_toLeftOf="@id/navigate_text"
            android:layout_marginRight="10dp"
            />


    </RelativeLayout>

    <GridView
        android:scrollbars="none"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Station_GridView"
        android:listSelector="@color/transparent"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        />

</LinearLayout>