<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ad_background"
    >

    <TextView
        android:id="@+id/adt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="名称："
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/adBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="工业及科学用品"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        />

    <TextView
        android:id="@+id/ad_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/adt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="类型："
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/ad_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="视频"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:layout_below="@id/adt"
        />

    <TextView
        android:id="@+id/ad_id_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_type"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:text="广告 id："
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/ad_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="3"
        android:textStyle="bold"
        android:layout_marginLeft="130dp"
        android:layout_below="@id/ad_sort"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/ad_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 元/条"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/ad_Price"
        />


</RelativeLayout>