<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Mine_Fragment"
    android:orientation="vertical"
    android:background="@drawable/mine_background3"
    >

    <!--  头部信息栏  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:elevation="5dp"
        >

        <ImageView
            android:id="@+id/header"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/mine_head"
            android:src="@drawable/mine_head" />

        <TextView
            android:id="@+id/mine_name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/header"
            android:text="白皓臣"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/mine_telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_name_TV"
            android:layout_toRightOf="@id/header"
            android:layout_marginLeft="20dp"
            android:text="18066533078"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:id="@+id/head_left_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_driver_id"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="16"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="司机 ID"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/head_right_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sex_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="男"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="性别"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/scan_device"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/scan"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备码"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/setting"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/setting"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginRight="80dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ad_cal"
                android:layout_gravity="center"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ad"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广告"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </RelativeLayout>



    <!--  中部相关信息  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:elevation="5dp"
            android:id="@+id/mine_under_linear"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/mine_under_background"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="66.6dp"
                android:orientation="horizontal"
                android:background="@drawable/mine_under_item_top"
                >

                <ImageView
                    android:id="@+id/mine_src_adminID"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/mine_location"
                    />

                <TextView
                    android:layout_toRightOf="@+id/mine_src_adminID"
                    style="@style/mine_item_tishici"
                    android:text="位置"
                    />

                <TextView
                    android:id="@+id/location_TV"
                    style="@style/mine_item_result"
                    android:text="成都"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="66.6dp"
                android:orientation="horizontal"
                android:background="@drawable/mine_under_item_middle"
                >

                <ImageView
                    android:id="@+id/mine_src_equipment"
                    style="@style/mine_item_image"
                    android:src="@drawable/mine_equipment"
                    />

                <TextView
                    android:id="@+id/mine_eqip"
                    android:layout_toRightOf="@+id/mine_src_equipment"
                    style="@style/mine_item_tishici"
                    android:text="设备码"
                    />

                <TextView
                    android:id="@+id/mine_equipment_TV"
                    style="@style/mine_item_result"
                    android:text="尚未绑定任何设备"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="66.6dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/mine_src_position"
                    style="@style/mine_item_image"
                    android:src="@drawable/register_liscense" />

                <TextView
                    android:layout_toRightOf="@+id/mine_src_position"
                    style="@style/mine_item_tishici"
                    android:text="车牌号"
                    />

                <TextView
                    android:id="@+id/mine_license_TV"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="京LP2990"
                    android:ellipsize="none"
                    android:inputType="textMultiLine"
                    android:singleLine="false"
                    />

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/logout_button"
            android:layout_below="@+id/mine_under_linear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:text="退出"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:background="@drawable/mine_logout_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>


</LinearLayout>