<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ad_management"
    android:orientation="vertical"
    android:background="@drawable/shoppingcar_background"
    >

    <TextView
        android:id="@+id/ad_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放列表"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/sum_Price2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27.5"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/shoppingcar_price"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="总收益：￥"
        android:layout_toLeftOf="@id/sum_Price2"
        android:layout_marginTop="64dp"
        android:textStyle="bold"
        />



    <ListView
        android:id="@+id/ad_listview"
        android:layout_below="@id/ad_text2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none"
        android:listSelector="@color/transparent"
        android:divider="@color/devider"
        android:dividerHeight="3dp"
        />


</RelativeLayout>