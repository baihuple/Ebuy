<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroud3"
    tools:context=".Settings">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/cd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改电话"
            android:textColor="@color/black"
            android:textColorHint="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            />

        <ImageView
            android:layout_marginTop="78dp"
            android:layout_toRightOf="@id/cd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/phone_icon"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/change_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:text="旧电话："
            />

        <EditText
            android:inputType="phone"
            android:id="@+id/oldPhone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="240dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@drawable/login_editview"
            android:maxLength="11"
            android:padding="7dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/change_phone2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:text="新电话："
            />

        <EditText
            android:id="@+id/newPhone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="240dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@drawable/login_editview"
            android:padding="7dp"
            android:maxLength="11"
            android:inputType="phone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/change_phone3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:text="确认电话："
            />

        <EditText
            android:id="@+id/cfmnewPhone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="240dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@drawable/login_editview"
            android:padding="7dp"
            android:maxLength="11"
            android:inputType="phone"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/phone_change_BT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/invite_button_style"
        android:padding="20dp"
        android:text="修改"
        android:textColor="@color/white"
        android:textSize="20dp" />




</LinearLayout>