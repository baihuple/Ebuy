<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/other_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/pro_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定设备"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/pro_text"
            android:layout_marginTop="57dp"
            android:src="@drawable/bind"
            />

    </RelativeLayout>

    <RelativeLayout
        android:background="@color/white"
        android:padding="5dp"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <TextView
            android:id="@+id/add_prduct_N"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:text="设备码："
            />

        <EditText
            android:id="@+id/equipment_Num"
            android:layout_toRightOf="@+id/add_prduct_N"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:background="@null"
            android:padding="5dp"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>


    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/scan_eqip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="绑定"
        android:background="@drawable/bind_button_style"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:elevation="10dp"
        android:padding="20dp"
        android:layout_marginBottom="30dp"
        />

</LinearLayout>