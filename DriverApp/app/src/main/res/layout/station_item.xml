<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:background="@drawable/product_item_backgroun"
    android:elevation="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        roundiv:cardCornerRadius="20dp"
        roundiv:cardElevation="0dp"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:id="@+id/prodcut_image"
            />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/product_title"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

        <TextView
            android:layout_below="@+id/product_title"
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="17.8"
            android:layout_marginLeft="10dp"
            android:textColor="@color/product_price"
            />

        <TextView
            android:layout_below="@+id/product_title"
            android:id="@+id/product_number"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="剩余 12"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/product_price"
            android:textSize="13dp"
            android:textColor="@color/product_num"
            />

        <Button
            android:id="@+id/product_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="33dp"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:background="@drawable/plus_red"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>



</LinearLayout>