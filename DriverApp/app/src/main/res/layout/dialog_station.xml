<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="40dp"
    android:paddingRight="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/station_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="站点id:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/station_id_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/station_id"
                android:text="1"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="站点名称:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/station_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/station_name"
                android:text="补货站"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/station_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="站点地址:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/station_addr_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/station_addr"
                android:text="四川省成都市"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/admin_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="栈顶管理员:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/admin_name_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/admin_name"
                android:text="管理员2号"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/admin_Tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="管理员电话:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/admin_Tel_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/admin_Tel"
                android:text="190736734823"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Station_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="站点状态:"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/Station_state_TV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/Station_state"
                android:text="关闭中"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/station_detail_BT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详情" />

            <Button
                android:id="@+id/close_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/station_detail_BT"
                android:text="关闭" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>