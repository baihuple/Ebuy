<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundiv="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:background="@drawable/product_item_backgroun"
    android:elevation="2dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        roundiv:cardCornerRadius="20dp"
        roundiv:cardElevation="0dp"
        >
        <ImageView
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:id="@+id/car_prodcut_image"
            />
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/car_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="尿不湿"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/car_signal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/product_price"
            android:layout_below="@+id/car_product_title"
            />

        <TextView
            android:layout_toRightOf="@id/car_signal"
            android:layout_below="@+id/car_product_title"
            android:id="@+id/car_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="17.8"
            android:layout_marginLeft="3dp"
            android:textColor="@color/product_price"
            />

        <TextView
            android:layout_below="@+id/car_product_title"
            android:id="@+id/car_sinal2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="剩余 "
            android:layout_marginTop="1dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@id/car_product_price"
            android:textSize="13dp"
            android:textColor="@color/product_num"
            />

        <TextView
            android:id="@+id/car_product_num"
            android:layout_below="@+id/car_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="12"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@id/car_sinal2"
            android:textSize="13dp"
            android:textColor="@color/product_num"
            />

        <TextView
            android:id="@+id/car_shelveid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@id/tool"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="3dp"
            />

        <TextView
            android:id="@+id/tool"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="号"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="7dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/car_product_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/car_product_num"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="6dp"
            android:text="售卖中"
            android:textSize="13dp" />

    </RelativeLayout>



</LinearLayout>