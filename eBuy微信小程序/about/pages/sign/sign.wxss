/* 注册界面 */
page{
    background: #ffffff;
}

.image_content{
    display:flex;
    justify-content: center;
}


.sign_text{
    font-weight: 700;
    font-size: 70rpx;
    margin-left: 50rpx;
    margin-top: 130rpx;
}

image{
    height: 200rpx;
    width: 200rpx;
}

.middle{
    margin-top: 200rpx;
}

.form_item{
    display: flex;                                        /* 表单项，弹性盒子布局 */
    position: relative;
    margin-bottom: 40rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;

    margin-left: 60rpx;
    margin-right: 30rpx;

    background: white;
    border-bottom: 1rpx solid #f5f0f0;
}

.form_image{
    width: 55rpx;
    height: 55rpx;
}

.form_view{
    font-size: 35rpx;
    font-weight: 500;
    margin-top: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

/* 输入框样式 */
.input_setting{
    position: absolute;
    margin-left: 200rpx;
    margin-top: 13rpx;
}

/* 登陆 */
.sign{
    margin-top: 120rpx;
    background: #1c84fa;
    border: 1rpx solid #E4DBDB;
    height: 100rpx;

    text-align: center;
    line-height: 90rpx;

    color: white;
    font-size: 48rpx;
    border-radius: 10rpx;
    margin-left: 40rpx;
    margin-right: 40rpx;
}



.press_style_sign{
    margin-top: 120rpx;
    background: #074892;
    border: 1rpx solid #E4DBDB;
    height: 100rpx;

    text-align: center;
    line-height: 90rpx;

    color: white;
    font-size: 48rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}
