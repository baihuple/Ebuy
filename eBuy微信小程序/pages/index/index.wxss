/* pages/index/index.wxss */
page{
    background: #F6F6F6;
}

/* 1) 顶部搜索框样式 */
.header{
    background: white;
    padding: 20rpx;
    display: flex;             /** 弹性格子 **/
  }

.search{
    flex: 1;                    /** 使用剩下所有空间 **/
    background: #eee;
    color: #999;
    padding-left: 10rpx;
  
    font-size: 33rpx;
    border-radius: 10rpx;
  
    padding-top: 15rpx;
    padding-bottom: 15rpx;
  }

  /* 2)轮播图样式 */
.swiper_container{
    width: 100%;
    position: relative;
}

.swiper_container swiper{
    height: 430rpx;
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.swiper_container swiper-item{
    position: relative;
    border-radius: 30rpx;
}

.swiper_container image{
    width: 100%;
}

.swiper_container .info{
    position:absolute;
    bottom: 0;
    right: 0;
    left: 0;
    text-align: center;
    padding: 10rpx;
    font-size: 28rpx;
    color: white;
    background-color: rgba(0,0,0,0.3);  
}

.swiper_container .current{         /* 右下角数字 */
    position: absolute;
    right: 0;
    bottom: 0;
    font-size: 28rpx;
    padding: 10rpx;
    color: white;  
}

/* 3) 导航列表 */
/* 分类列表 */
.type{
    display: flex;          /* 父容器为弹性盒子 */
    flex-wrap: wrap;        /* 盒子中的元素允许换行 */
    background: #fff;
    /* margin-top: 30rpx; */
    padding-top: 20rpx;
  }
  
  .type .item{
    width: 25%;
    text-align: center;
    color: #333;
    background: #fff;
  
    font-size: 28rpx;
    margin-bottom: 20rpx;
  }
  
  .type image{
    width: 74rpx;
    height: 74rpx;
  }


  /* 4) 模板样式引入,渲染商品 */
  @import './product_template//productList.wxss'

  
  
  
  
  


