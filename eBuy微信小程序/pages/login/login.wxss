/* 登录界面 */
page{
    background: #ffffff;
}

.image_content{
    display:flex;
    justify-content: center;
}

@keyframes myfirst
{
    0%   {opacity: 0;width: 0rpx;height: 0rpx;}
    100% {opacity:1;width: 400rpx;height:400rpx;}
}

.image_logo{
    animation: myfirst 1s;
    width: 400rpx;
    height: 400rpx;    
}

.login_text{
    font-weight: 700;
    font-size: 70rpx;
    margin-left: 50rpx;
    margin-top: 130rpx;
}

.head{
    margin-top: 50rpx;
    text-align: center;
    margin-bottom: 50rpx;
}

image{
    height: 400rpx;
    width: 500rpx;
}

.middle{
    margin-top: 50rpx;
}

.form_item{
    display: flex;                                        /* 表单项，弹性盒子布局 */
    position: relative;
    margin-bottom: 40rpx;
    padding-top: 20rpx;
    padding-bottom: 20rpx;

    margin-left: 50rpx;
    margin-right: 50rpx;

    background: white;
    border-bottom: 1rpx solid #f5f0f0;
}

.form_image{
    width: 55rpx;
    height: 55rpx;
}

.form_view{
    font-size: 35rpx;
    font-weight: 500;
    margin-top: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

/* 输入框样式 */
.input_setting{
    position: absolute;
    margin-left: 200rpx;
    margin-top: 13rpx;
}

/* 登陆 */
.Login{
    margin-top: 120rpx;
    background: #1c84fa;
    border: 1rpx solid #E4DBDB;
    height: 100rpx;

    text-align: center;
    line-height: 90rpx;

    color: white;
    font-size: 48rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.press_style_Login{
    margin-top: 120rpx;
    background: #074892;
    border: 1rpx solid #E4DBDB;
    height: 100rpx;

    text-align: center;
    line-height: 90rpx;

    color: white;
    font-size: 48rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

/* 点击注册 */
.press_style_sign{
    color: white;
    float: right;
    margin-top: 20rpx;
    margin-right: 20rpx;
}

/* 注册 */
.sign{
    color: #989898;
    float: right;
    margin-top: 20rpx;
    margin-right: 20rpx;
}