  /* 1) 商品栏整体格式 */
  .list{
    display: flex;
    background: white;
    margin-top: 20rpx;
    justify-content: space-between;

  }
  
  /* 1.1) 商品栏-----左侧内容容器 */
  .content{
    flex: 1;                          /* 全部占满 */           
    width: 100%;                      /* 把 “ 删除 ” 撑开撑走看不到*/
    display:flex;
    padding: 20rpx;
    align-items: center;
  
    /* 默认左侧的盒子: 最左侧90px不出现 */
    margin-left: -90px;
    /* 希望左侧容器的内容是显示出来的,向右移动 90px */
    transform: translateX(90px);
    transition: all 0.4s;
  }
  
  .remove{
    width: 90px;
    background: red;
    color: white;
    text-align: center;
    /* height: 200rpx; */
  
    display: flex;                      /* 弹性盒子实现文字水平、垂直居中 */
    align-items: center;                 /* 实现垂直居中 */
    justify-content: center;             /* 实现水平居中 */ 
  
    /* 默认样式 删除不出现：向右移动 */
    transform: translateX(90px);
    transition: all 0.4s;
  }
  
  /* 样式修改动画 加上 touch-move 类，覆盖原来 */
  .touch-move .content,.touch-move .remove{
    transform: translateX(0px);
    transition: all 0.4s;
  }
  
  /* 左侧内容布局 */
  .img image{
    border-radius: 20rpx;
    width: 184rpx;
    height: 184rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
  }
  
  /* 右侧容器 */
  .wrapper{
    /* border:1rpx solid red; */
    height: 184rpx;
    position: relative;
    /* flex:1;
    display: flex; */
  }
  
  .desc{
    color: #666;
    font-size: 28rpx;
    margin-top: 10rpx;
  
      /* 2行省略 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .info{
    position: absolute;           /* 定位在wrapper的下方 */
    bottom: 0;
    left: 0;
    font-size: 33rpx;
    display: flex;
  }

  
  .info .price{
    color: red;
  }

  .th{
      font-weight: 500;
      font-size: 35rpx;
  }

  .update{
    margin-left: 300rpx;
    position: absolute;
    display: flex;
  }
  
  .update .reduce{
    text-align: center;
    width: 40rpx;
    height: 40rpx;
    border: 1rpx solid #999;
  }
  
  .update .num{
    padding-left: 10rpx;
    padding-right: 10rpx;
  }
  
  .update .add{
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    border: 1rpx solid #fff;
    color: white;
    background: #333;
  }
  
  /* 结算栏 */
  .height{
    height: 160rpx;
  }
  
  .bottom{
    position: fixed;              /* 固定定位 */
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    background: white;
  }
  
  .checkboxAll{
