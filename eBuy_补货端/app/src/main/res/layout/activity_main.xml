<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    
    >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/VP_nav"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />

    <RadioGroup
        android:padding="2dp"
        android:background="@drawable/icon_back"
        android:id="@+id/RG_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/RB_product"
            style="@style/nav_fragment"
            android:checked="true"
            android:text="货架商品"
            android:drawableTop="@drawable/nav_product"
        />

        <RadioButton
            android:id="@+id/RB_invite"
            style="@style/nav_fragment"
            android:text="邀约"
            android:drawableTop="@drawable/nav_invite"
            />

        <RadioButton
            android:id="@+id/RB_mine"
            style="@style/nav_fragment"
            android:text="我的"
            android:drawableTop="@drawable/nav_mine"
            />

    </RadioGroup>


</LinearLayout>