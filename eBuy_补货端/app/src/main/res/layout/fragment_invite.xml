<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/invite_background2"
    tools:context=".Fragment.Invite_Fragment"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="158dp"

        >
        <TextView
            android:textStyle="bold"
            android:id="@+id/invite_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="邀请函"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/black"
            />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/invite_text"
            android:layout_marginTop="57dp"
            android:src="@drawable/invite_message"
            />

        <ImageView
            android:id="@+id/message_IV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/message"
            />

        <TextView
            android:id="@+id/sig1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textColor="@color/message_font"
            android:layout_below="@id/message_IV"
            android:textSize="13dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="23dp"
            />

        <ImageView
            android:id="@+id/invite_list_IV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/message_IV"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/invite_list"
            />

        <TextView
            android:id="@+id/invite_list_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已邀约"
            android:textColor="@color/message_font"
            android:layout_below="@id/message_IV"
            android:textSize="13dp"
            android:layout_toLeftOf="@id/sig1"
            android:layout_marginRight="8dp"
            />

        <ImageView
            android:id="@+id/driver_buy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/invite_list_IV"
            android:layout_marginTop="13dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/settime"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单"
            android:textColor="@color/message_font"
            android:layout_below="@id/message_IV"
            android:textSize="13dp"
            android:layout_toLeftOf="@id/invite_list_text"
            android:layout_marginRight="7dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/invite_title_IV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="邀约清单"
            android:padding="20dp"
            android:textColor="@color/black"
            />

        <ListView
            android:id="@+id/invite_LV"
            android:listSelector="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/invite_button"
            android:divider="@null"
            android:layout_below="@id/invite_title_IV"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:scrollbars="none"
            android:background="@drawable/invite_under_background" />


        <Button
            android:id="@+id/invite_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="发送邀约"
            android:textColor="@color/white"
            android:background="@drawable/invite_button_style"
            android:textSize="18dp"
            android:elevation="10dp"
            android:padding="20dp"
            android:layout_marginBottom="30dp"
            />

        <ImageButton
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/invite_button"
            android:id="@+id/invite_delete_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:background="@color/product_fra_backgorund"
            android:padding="20dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/trash_bin"
            />

    </RelativeLayout>


</LinearLayout>