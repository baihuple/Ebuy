<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/message_avator"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/driver_avator"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:textStyle="bold"
        android:id="@+id/sig"
        android:layout_toRightOf="@+id/message_avator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="司机ID："
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/message_driverid"
        android:layout_toRightOf="@id/sig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="17dp"
        />

    <TextView
        android:id="@+id/message_content"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="这里面有很多内容"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@id/message_driverid"
        android:layout_toRightOf="@id/message_avator"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:textSize="13dp"
        android:id="@+id/message_time"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-5-21 12:31:57"
        />

</RelativeLayout>